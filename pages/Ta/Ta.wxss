/* pages/Ta/Ta.wxss */
.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0;
  background-color: EFEFF4;
} 
.container .placehold .endtext{
  margin-top: 100rpx;
}
.userinfo_top{
  width: 100%;
  height: 230rpx;
  padding: 20rpx 0 0 0;
  display: flex;
  flex-direction:column;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  align-items: center;
}
.userinfo_top .tip{
  font-size:12px;
  color: #ccc;
  margin-top: 20rpx;
}
.userinfo {
  width: 100%;
  height:300rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.ctnt0 placehold{
  height: 100%;
  width: 600rpx;
}

.userinfo-avatar {
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  margin:10px;
}
.userinfo-infos{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 0 10rpx;
  background-color: aqua;
}
.userinfo-nickname {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 0 10rpx;
}
.hot{
  height:100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
}
.hotImage{
  width: 30rpx;
  height: 40rpx;
  margin-left: 10rpx;
}
.toptab{
  width: 750rpx;
  height: 100rpx;
  color: #000000;
  font-size: 28rpx;
  line-height: 100rpx;
  z-index: 9999;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.toptab.active{
  color: #F5A623;
  border-bottom: solid 3px #F5A623;
}

.flex-wrp{
  display: flex;
}
.flex-tab{
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}

