.container {
  width: 750rpx;
}

.container .fabu {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 15rpx;
  background-color: white;
  font-size: 16px;
}
.container .fabu textarea{
 width: 640rpx;
 min-height: 100rpx;
 margin-bottom: 50rpx;
}
.container .fabu .imageArea{
  width: 640rpx;
  height: 220rpx;
  display: flex;
  justify-content: left;
  align-items: center;
  margin-bottom: 20rpx;

}
.container .fabu .imageArea .image{
  width: 200rpx;
  height: 200rpx;
  position: relative;
  overflow: hidden;
  justify-content:auto;
  align-items: center;
  margin: 10rpx 0 10rpx 10rpx;
}
.container .fabu .imageArea .image .ImgDel{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 0;
  top: 0;
  background-color:rgba(255, 255, 255, 0.5);
}
.container .fabu .imageArea .image image{
  display: block;
}
.container .fabu .imageArea .addImg{
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx 0 10rpx 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.container .fabu .imageArea .addImg image{
  width: 200rpx;
  height: 200rpx;
}
.container .niming {
 margin-top: 20rpx;
  width: 750rpx;
  height: 90rpx;
  border-top-color: gainsboro;
  border-top-width: 0.5px;
  border-top-style: solid;
  border-bottom-color: gainsboro;
  border-bottom-width: 0.5px;
  border-bottom-style: solid;
}

.container .niming .wenzi {
  width: 375rpx;
  height: 90rpx;
  float:left;
}

.container .niming .wenzi text {
  position: relative;
  left: 10px;
  top: 20rpx;
}

.container .niming .switch {
  width: 375rpx;
  height: 90rpx;
  float:left;
}

.container .niming .switchbutton {
  position: relative;
  margin-top: 10rpx;
  float: right;
}

.container .type{
  margin-top: 40rpx;
  padding: 20rpx 20rpx;
  width: 750rpx;
  border-top: 0.5px solid gainsboro;
  border-bottom: 0.5px solid gainsboro;
}

.container .type .abc{
  width:720rpx;
  display: flex;
}
.container .type button{
  width: 100rpx;
  height: 60rpx;
  font-size: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding:0;
}
.container .type button text{
  width: 90%;
  height: 90%;
}
.container .subbutton {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}



.container .subbutton .btn{
  width:90%;
  background-color: #f5a623;
}

.container .subbutton .btn[disabled]{
  width:90%;
  background-color: #ffcc7b;
}