/**index.wxss**/
.topcontainer{
  height: 100rpx;
  display: flex;
  position: fixed;
  z-index: 99;
}

.container{
  top:100rpx;
  position: fixed;
  height: 1030rpx;
}

.top-tab1{
  width: 600rpx;
  height: 100rpx;
  color: #000000;
  font-size: 28rpx;
  line-height: 100rpx;
  z-index: 999;
  display: flex;
}


.top-tab2{
  width: 150rpx;
  height: 100rpx;
  color: #000000;
  line-height: 100rpx;
  z-index: 999;
  display: flex;
}
.toptab.active{
  color: #F5A623;
  border-bottom: solid 3px #F5A623;
}

/*.flex-wrp{
  display: flex;
}*/
.flex-tab{
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}
.flex-item{
  flex-grow: 1;
  text-align: center;
}

.fabu{
  width:30rpx;
  height:30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.activity{
  width: 750rpx;
  height: 375rpx;
}
.activity image{
  width: 750rpx;
  height: 375rpx;
}
.placehold{
  font-size: 28rpx;
  padding: 80rpx 0;
}
/*提醒添加小程序*/
.addimage{
  width: 300rpx;
  height: 100rpx;
  position: fixed;
  right: 12%;
  top: 1%;
  z-index: 999;
}

.top-tab2 button{
  border: 1px solid #fff;
  display: flex;
  align-items: center;
  background-color: #fff;
}
.top-tab2 button::after{ border: none; }