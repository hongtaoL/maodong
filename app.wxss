/**app.wxss**/

.container .withtab {
  margin: 0 0 0 0;
  /*top: 105rpx;*/
}

.flex-wrp {
  display: flex;
}

.flex-tab {
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}

.flex-item {
  flex-grow: 1;
  text-align: center;
}

.container .feed-item {
  width: 690rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: 7rpx 0 6rpx 0;
  background: #fff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eee;
}

.container .feed-item .feed-source {
  width: 100rpx;
  height: 110rpx;
  left: 0;
  float: left;
}

.container .feed-item .feed-source .avatar {
  position: relative;
  display: inline-block;
  padding-top: 10rpx;
}

.container .feed-item .feed-source a {
  display: inline-block;
  height: 40rpx;
}

.container .feed-item .feed-source .avatar image {
  /*position: absolute;*/
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}

.container .feed-item .feed-source .item-more {
  display: inline-block;
  width: 40rpx;
  height: 45rpx;
  float: right;
}

.container .feed-item .feed-content {
  padding: 10rpx 0 0 0;
}

.container .feed-item .feed-content .feed-content-top {
  height: 60rpx;
}

.container .feed-item .feed-content .feed-content-top .name {
  display: inline-block;
  width: 460rpx;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  color: #000;
  font-size: 34rpx;
}

.container .feed-item .feed-content .feed-content-top .types {
  width: 60rpx;
  height: 40rpx;
  padding-left: 20rpx;
  display: inline-block;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 10rpx;
  color: #f5a623;
  font-size: 20rpx;
  border: 1px solid #f5a623;
  border-radius: 5px;
}

.container .feed-item .feed-content .question text {
  font-size: 28rpx;
  font-weight: 600px;
  line-height: 40rpx;
  text-space: 5rpx;
}

.container .feed-item .feed-content .answer-body {
  margin-left: 100rpx;
  padding: 10rpx 0 0 0;
  /*height: 10rpx;*/
  width: 550rpx;
  font-size: 28rpx;
  line-height: 20px;
  color: #5b5b5b;
  
}

.container .feed-item .feed-content .answer-body text  {
   word-break: break-all;
}
