  margin-right: 10rpx;
  background-repeat: no-repeat;
  background-position:center center;
  background-size:cover;
  background-color: #eee;
}
.container .feed-item .feed-content .content-bottom {
  width: 690rpx;
  padding: 20rpx 0 0;
  color: #a0acac;
  display: flex;
}

.container .feed-item .feed-content .content-bottom view {
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 20rpx 0 0;
  font-size: 24rpx;
}

.container .feed-item .feed-content .content-bottom .time {
  width: 25%;
}

.container .feed-item .feed-content .content-bottom .delete {
  margin-left:20rpx;
  width: 5%;
}
.container .feed-item .feed-content .content-bottom .deleteIndex{
  margin-left:20rpx;
  width: 26%;
}
.container .feed-item .feed-content .content-bottom .deleteTypes{
  margin-left:20rpx;
  width: 25%;
}
.container .feed-item .feed-content .content-bottom .deleteMy{
  margin-left:20rpx;
  width: 25%;
}
.container .feed-item .feed-content .content-bottom .delete a {
  width: 50rpx;
  height: 30rpx;
  padding-left: 13rpx;
  display: inline-block;
  line-height: 30rpx;
  vertical-align: middle;
  margin: 5 0 0 0rpx;
  color: #a0acac;
  font-size: 22rpx;
  /*border: 1px solid #a0acac;*/
  border-radius: 5px;
}

.container .feed-item .feed-content .content-bottom .comments {
  width: 15%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container .feed-item .feed-content .content-bottom .comments a {
  color: #5b5b5b;
  margin-left: 10rpx;
  float: left;
}

.container .feed-item .feed-content .content-bottom .comments image {
  width: 30rpx;
  height: 26rpx;
   margin-top: 3rpx;
  float: left;
}

.container .feed-item .feed-content .content-bottom .collection {
  width: 15%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container .feed-item .feed-content .content-bottom .collection a {
  color: #5b5b5b;
  margin-left: 10rpx;
  float: left;
}

.container .feed-item .feed-content .content-bottom .collection image {
  width: 30rpx;
  height: 30rpx;
  margin-top: -1rpx;
  float: left;
}
.container .feed-item .feed-content .content-bottom .collection button {
  width: 30rpx;
  height: 30rpx;
  margin: 0;
  padding: 0;
  float: left;
  background-color: #fff;
  font-size: 12px;
}
.container .feed-item .feed-content .content-bottom .collection button::after{
  border: 0;
}
.container .feed-item .feed-content .content-bottom .collection button image{
  width: 30rpx;
  height: 30rpx;
  margin: 0;
  padding: 0;
  float: left;
  border: 0;
}
.container .feed-item .feed-content .content-bottom .like {
  width: 10%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container .feed-item .feed-content .content-bottom .like image {
  width: 30rpx;
  height: 26rpx;
  margin-top: 3rpx;
  float: left;
}

.container .feed-item .feed-content .content-bottom .like a {
  color: #5b5b5b;
  margin-left: 10rpx;
  float: left;
}
